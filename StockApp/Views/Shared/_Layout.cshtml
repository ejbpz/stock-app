<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/input.css"/>
    <link rel="stylesheet" href="~/css/styles.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="font-poppins bg-primary-light mx-auto flex h-screen max-w-[700px] flex-col bg-primary text-content sm:w-[90%] sm:px-10 xl:border-primary xl:border-x-[1px] xl:shadow-xl">
    <main class="container mx-auto mt-6 flex-1">
        @RenderBody()
    </main>
    <header class="sticky bottom-0 left-0 mx-auto mt-4 h-16 w-[90%] rounded-t-2xl bg-secondary">
        <div class="container mx-auto flex h-full items-center justify-center">
            <h1 class="text-xl font-semibold text-white"><a href="/">Stocks</a></h1>
        </div>
    </header>
    @RenderSection("Scripts", false)
</body>
</html>
